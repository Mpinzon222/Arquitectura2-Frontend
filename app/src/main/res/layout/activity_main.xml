<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco">

    <FrameLayout
        android:id="@+id/circulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/circulo"
            android:backgroundTint="#001A41"
            android:contentDescription="@string/desc_logo"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/principal" /> <!-- Establece un fondo circular -->
    </FrameLayout>

    <Button
        android:id="@+id/btnLogin"
        style="@style/EstiloBtnVerde"
        android:layout_width="191dp"
        android:layout_height="69dp"
        android:layout_marginVertical="128dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="128dp"
        android:background="#001A41"
        android:text="@string/login"
        android:textColorLink="@android:color/system_on_primary_container_light"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="407dp"
        android:layout_height="84dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="36dp"
        android:text="&quot;El control de tus finanzas comienza con cada pequeña decisión, llevando el registro de tus gastos y planificando cada ingreso.&quot;"
        android:textColor="#001A41"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>