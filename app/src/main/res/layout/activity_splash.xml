<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vista.UI.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/blanco">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_rawRes="@raw/money"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:layout_marginBottom="16dp"/>

        <!-- TextView -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="322dp"
            android:layout_height="124dp"
            android:fontFamily="@font/letraregular"
            android:text="El control de tus finanzas comienza con cada pequeña decisión, llevando el registro de tus gastos y planificando cada ingreso"
            android:textColor="@color/amarillo_oscuro"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>